{
    "name": "kazux/yii2-translate-manager",
    "description": "Translation management extension for Yii 2",
    "type": "yii2-extension",
    "keywords": ["yii2", "extension", "translate", "language", "module"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/lajax/yii2-translate-manager/issues?state=open",
		"source": "https://github.com/lajax/yii2-translate-manager"
	},
    "authors": [
        {
            "name": "Lajos Molnar",
            "email": "lajax.m@gmail.com"
        },
        {
            "name": "Eliel Avelar",
            "email": "elielavelar@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "yiisoft/yii2": "~2.0.52",
        "yiisoft/yii2-bootstrap4": "@dev",
        "kartik-v/yii2-widgets": "^3.4",
        "kartik-v/yii2-helpers": "^1.3",
        "yiisoft/yii2-jui": "~2.0.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v2.19.3"
    },
    "autoload": {
        "psr-4": {
            "lajax\\translatemanager\\": ""
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-fix-dry-run": "php-cs-fixer fix --config=.php_cs --dry-run --diff"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower-asset"
            }
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
